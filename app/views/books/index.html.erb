<% if @book.errors.any? %>
     <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
     </ul>
    <% end %>

<%= render partial: 'users/list.html', locals: {user:@user ,books:@book} %>



<div class="col-xs-9">
<h2>Books</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
        </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
    <tr>
      <td><%= link_to attachment_image_tag(book.user, :profile_image, size: '40x40', class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"),user_path(book.id) %></td>

      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>


    </tr>
    <% end %>
    </tbody>
</table>

</div>
</div>
