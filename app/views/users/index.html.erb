<%= render partial: 'users/list.html', locals: {user:current_user ,books:@book} %>


<div class="col-xs-9">
<h1>Users</h1>

<table>
    <thead>
        <tr>
            <th>image</th>
            <th>name</th>
        </tr>
    </thead>

    <tbody>
    	<% @users.each do |user| %>
		<tr>
			<td><%= attachment_image_tag user, :profile_image, size: '40x40', class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %></td>
			<td><%= user.name %></td>

			<td><%= link_to "Show",  user_path(user.id) %></td>
		</tr>
    <% end %>

    </tbody>
</table>

</div>
</div>