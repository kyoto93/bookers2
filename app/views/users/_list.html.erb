<div class="container">
    <div class="row">
        <div class="col-xs-3">


<h2>User info</h2>

 <div>
  <%= attachment_image_tag user, :profile_image, size:"100x100", format: 'jpeg',fallback: "no_image.jpg" %>
 </div>


 <table class="table">
    <tbody>
        <tr></tr>
        <tr>
            <th>name</th>
            <th><%= user.name %></th>
        </tr>
        <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
        </tr>
    </tbody>
</table>


<div class="row">
<%= link_to "", edit_user_path(user.id),class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
</div>


<h2>New book</h2>
<!-- form_for部分 -->
<%= form_for(books) do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book',class: "btn btn-primary col-xs-12" %>

<% end %>

</div>

